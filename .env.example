# Discord
DISCORD_TOKEN=

# Google Gemini API (when PLATFORM=google)
GOOGLE_API_KEY=

# Google Grounding with Google Search (when PLATFORM=google)
# This enables real-time web search grounding for more accurate answers
ENABLE_GOOGLE_GROUNDING=true

# OpenAI-compatible API
# For OpenAI, OpenRouter, or other compatible providers
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
# For OpenRouter: OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Context settings
CHANNEL_HISTORY_LIMIT=15
REPLY_CHAIN_LIMIT=15

# Persona / Character Setting
# Optional: Set a custom persona for the bot to follow a specific character or role
# Example: PERSONA=You are a helpful Discord bot named Alex. You are knowledgeable about technology and programming. You speak in a friendly and professional manner.
# PERSONA=

# Web search (Tavily) - Used as fallback when ENABLE_GOOGLE_GROUNDING=false
ENABLE_WEB_SEARCH=true
SEARCH_PROVIDER=tavily
TAVILY_API_KEY=
# Citation Links Display
# Whether to show citation/reference links in bot responses (default: false)
ENABLE_CITATION_LINKS=false

# Embed Footer
# Customizable footer text for the token count embed
EMBED_FOOTER=[LMcord](https://github.com/lunae-f/LMcord), made with ‚ù§Ô∏è‚Äçüî• by Lunae. | MIT License

# Cost Control
# Monthly cost limit in USD (0 = unlimited)
MAX_MONTHLY_COST_USD=0

# Rate Limiting
# Maximum requests per minute per user
MAX_REQUESTS_PER_MINUTE=10